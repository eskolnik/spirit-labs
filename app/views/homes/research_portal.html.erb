<div class='ritual-background'>
  <div class='ritual-form-container'>
    <h1 class='ritual-header'>ENTER RITUAL CODE</h1>
    <div class='ritual-form'>
      <%= form_tag("/api/ritual_codes", method: "post") do %>
        <%= label_tag(:token, "Token:") %>
        <%= text_field_tag(:token) %>
        <%= submit_tag("Submit") %>
      <% end %>
      <br>
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
    </div>
  </div>
</div>
